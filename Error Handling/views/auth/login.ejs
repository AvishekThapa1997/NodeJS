<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main class="form-main">
       <form class="form" action="/login" method="POST" novalidate>
            <div class="form-control">
                <label for="email">Email</label>
                <input 
                    class="<%=validationErrors?.email ? 'invalid' : ''%>"
                    type="email" 
                    id="email" 
                    name="email" 
                    value="<%=prevInput?.email ?? ''%>"/>
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input 
                    class="<%=validationErrors?.password ? 'invalid' : ''%>"
                    type="password" 
                    id="password" 
                    name="password" 
                    value="<%=prevInput?.password ?? ''%>"/>
            </div>
            <input type="hidden" value="<%= csrfToken %>" name="_csrf">
            <div class="submit"><button class="btn" type="Submit">Login</button></div>
        </form>
         <a class="forgot-password" href="/reset-password">Forgot Password?</a>
        <%if(errorMessage){%>
        <p class="error"><%= errorMessage %></p>
        <%}%>
        <%if(successMessage){%>
        <p class="success"><%= successMessage %></p>
        <%}%>
    </main>
</body>
<%- include('../includes/end.ejs') %>